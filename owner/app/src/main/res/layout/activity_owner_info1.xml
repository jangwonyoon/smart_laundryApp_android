<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".owner_info1"
    android:weightSum="11"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/layout_info1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름:   "
            android:textStyle="bold"
            android:textColor="#111111"
            android:layout_gravity="center">

        </TextView>

        <TextView
            android:id="@+id/layout_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="이름들어갈곳"
            android:layout_gravity="center">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_info2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/layout_info1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  ID:    "
            android:textStyle="bold"
            android:textColor="#111111"
            android:textSize="15dp"
            android:layout_gravity="center">

        </TextView>

        <TextView
            android:id="@+id/layout_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디들어갈곳"
            android:layout_gravity="center"
            android:textSize="15dp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_info3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/layout_info2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="PW:  "

            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#111111">
        </TextView>

        <EditText
            android:id="@+id/layout_et1"
            android:layout_width="223dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            >

        </EditText>

        <Button
            android:id="@+id/layout_b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="변경"
            android:layout_gravity="center">

        </Button>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_info4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/layout_info3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="번호:     "
            android:textSize="15dp"
            android:textColor="#111111"
            android:layout_gravity="center"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/layout_et2"
            android:layout_width="223dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:singleLine="true"

            >

        </EditText>

        <Button
            android:id="@+id/layout_b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:text="변경">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_info5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/layout_info4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="E-mail: "
            android:textSize="15dp"
            android:textColor="#111111"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/layout_et3"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:singleLine="true"
            >

        </EditText>

        <Button
            android:id="@+id/layout_b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="변경">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_info6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/layout_info5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="번호(가게):  "
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="#111111"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/layout_et4"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:singleLine="true"
            >

        </EditText>

        <Button
            android:id="@+id/layout_b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:text="변경">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_info7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/layout_info6"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:text="영업상태 "
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="#111111"

            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/layout_cd"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="상태          "
            android:gravity="center"
            android:textSize="15dp">

        </TextView>

        <Button
            android:id="@+id/layout_b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="변경">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영업시간: "
            android:textSize="15dp"
            android:textColor="#111111"
            android:layout_gravity="center"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/layout_et5"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:hint="예) 09:00 ~ 17:00"
            android:singleLine="true"
            >

        </EditText>

        <Button
            android:id="@+id/layout_b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="확인">

        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="  휴무일:   "
            android:textSize="15dp"
            android:textColor="#111111"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/layout_et6"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:hint="예) 월요일(정기휴무)"
            android:singleLine="true">

        </EditText>

        <Button
            android:id="@+id/layout_b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:text="확인">

        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 하루권장 주문수:   "
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="#111111"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/layout_et7"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:hint="숫자만 입력"
            android:singleLine="true"
            android:layout_gravity="center">

        </EditText>

        <Button
            android:id="@+id/layout_b9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="확인"
            android:layout_gravity="center">

        </Button>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >

        <Button
            android:id="@+id/layout_b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="재로그인">

        </Button>


    </LinearLayout>



</LinearLayout>