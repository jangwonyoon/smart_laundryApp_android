<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".owner_login"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/layout5_et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:text="hoguri"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:singleLine="true"
        ></EditText>
    <EditText
        android:id="@+id/layout5_et2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/layout5_et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PW"
        android:text="12345678"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:singleLine="true"
        android:inputType="textPassword"
        ></EditText>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/layout5_b1"
            android:layout_below="@+id/layout5_et2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID/PW찾기"
            android:textSize="20dp"
            android:layout_margin="20dp"
            ></Button>

        <Button
            android:id="@+id/layout5_b2"
            android:layout_below="@+id/layout5_et2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     로그인    "
            android:textSize="20dp"
            android:layout_margin="20dp"
            ></Button>
    </LinearLayout>

</LinearLayout>