        android:id="@+id/map"
        android:layout_weight="6.4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/layout3_et1"
        android:layout_margin="10dp"
        android:name="com.naver.maps.map.MapFragment" />

