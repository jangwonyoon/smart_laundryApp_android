<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".user_login"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textStyle="bold"
        android:textSize="30dp"
        android:fontFamily="@font/title2"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/layout5_et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="아이디(ID)"
            android:text="edit0"
            android:fontFamily="@font/medium">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/layout5_et2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout5_et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호(PW)"
            android:text="12345678"
            android:inputType="textPassword"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/medium"
            >

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/layout5_b1"
            android:layout_below="@+id/layout5_et2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID/PW찾기"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/medium"
            ></Button>

        <Button
            android:id="@+id/layout5_b2"
            android:layout_below="@+id/layout5_et2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="     로그인    "
            android:textSize="20dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/medium"
            ></Button>
    </LinearLayout>

    
</LinearLayout>