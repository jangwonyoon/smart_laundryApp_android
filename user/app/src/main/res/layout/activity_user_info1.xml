<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_info1"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:background="@color/mainColor"
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="개인 정보"
            app:titleTextColor="@color/white" />

        </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/layout_info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름:   "
                android:textColor="#111111"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/layout_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#111111"
                android:textSize="15dp"
                android:text="이름들어갈곳">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_info2"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_info1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  ID:    "
                android:textColor="#111111"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/layout_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#111111"
                android:textSize="15dp"
                android:text="아이디들어갈곳">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_info3"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_info2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" PW: "
                android:textColor="#111111"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/layout_et1"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                />

            <Button
                android:id="@+id/layout_b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="변경"
                android:background="@drawable/buttonshape"
                android:fontFamily="@font/medium"
                android:textColor="@color/white"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_info4"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_info3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="번호: "
                android:textColor="#111111"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/layout_et2"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:singleLine="true"
                >

            </EditText>

            <Button
                android:id="@+id/layout_b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="변경"
                android:background="@drawable/buttonshape"
                android:fontFamily="@font/medium"
                android:textColor="@color/white"
                />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/layout_info5"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_info4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail:   "
                android:textColor="#111111"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/layout_et3"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:singleLine="true"
                >

            </EditText>

            <Button
                android:id="@+id/layout_b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="변경"
                android:background="@drawable/buttonshape"
                android:fontFamily="@font/medium"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/layout_info5"
            android:orientation="vertical"
            android:gravity="center"
            >

            <Button
                android:id="@+id/layout_b4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:text="다시 로그인하기"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

    </RelativeLayout>




</LinearLayout>