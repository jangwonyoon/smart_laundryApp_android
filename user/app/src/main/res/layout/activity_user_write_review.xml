<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user_write_review"
    android:weightSum="10"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="리뷰작성"
            android:textAlignment="center"
            android:textSize="20dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="55dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상품은 만족하였나요?"
            android:textAlignment="center"
            android:textSize="15dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2_2"
        android:layout_below="@id/layout2_1"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_margin="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="별점:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
        <RatingBar
            android:id="@+id/rating"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:numStars="5"
            android:isIndicator="false"
            android:stepSize="1"
            android:max="5"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="5"
        android:id="@+id/layout2_4"
        android:layout_below="@id/layout2_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰 작성란"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/nanum_gothic_bold"
            />
        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:hint="내용을 입력해 주세요. 상세하게 적을수록 다른 고객에게 큰 도움이 됩니다."
            android:text=""
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2_5"
        android:layout_weight="1.3"
        android:layout_below="@+id/layout2_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="사진 공유"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/nanum_gothic_bold"
            />
        <ImageView
            android:id="@+id/image1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/picture1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape3"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="취소"
            android:textColor="@color/blue"
            android:textSize="20dp" />

        <Button
            android:id="@+id/write"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="리뷰등록"
            android:textColor="@color/white"
            android:background="@drawable/buttonshape"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
</LinearLayout>