<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user_write_review"
    android:weightSum="10"
    android:background="@color/white">

    <LinearLayout
        android:layout_weight="1.5"
        android:id="@+id/layout2_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="#FF000000" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/layout2_b1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/arrow_back">

            </Button>

            <TextView
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="리뷰쓰기"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FF000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2_2"
        android:layout_below="@id/layout2_1"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_marginLeft="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="별점:"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:isIndicator="false"
            android:stepSize="1"
            android:max="5"
            style="?android:attr/ratingBarStyleIndicator"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:id="@+id/layout2_3"
        android:layout_below="@+id/layout2_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text=""/>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="5"
        android:id="@+id/layout2_4"
        android:layout_below="@id/layout2_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp">



        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="솔직한 리뷰 부탁드립니다!"
            android:gravity="start"
            android:text=""
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2_5"
        android:layout_weight="1.3"
        android:layout_below="@+id/layout2_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp">


        <ImageView android:id="@+id/image1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"
            />

        <ImageView android:id="@+id/image2"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_marginLeft="10dp"/>

        <ImageView android:id="@+id/image3"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_marginLeft="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2_6"
        android:layout_weight="1"
        android:layout_below="@+id/layout2_5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textSize="25dp"/>
    </LinearLayout>







</LinearLayout>